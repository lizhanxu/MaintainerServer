<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:text="发布时间  "/>

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/publish"
            android:layout_toRightOf="@+id/publish"
            android:text="2015-8-8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/publish"
            android:layout_alignLeft="@+id/publish"
            android:layout_alignStart="@+id/publish"
            android:text="奥迪A8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/order_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_type"
            android:layout_toEndOf="@+id/order_type"
            android:layout_below="@+id/publish"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="20"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_distance"
            android:layout_toEndOf="@+id/order_distance"
            android:layout_below="@+id/publish"
            android:text="km"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情:  "
            android:textSize="20sp"
            android:layout_alignLeft="@+id/publish"
            android:layout_alignStart="@+id/publish"
            android:layout_below="@+id/order_type"
            />


        <TextView
            android:id="@+id/order_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_2"
            android:layout_toEndOf="@+id/text_2"
            android:layout_below="@+id/order_type"
            android:text="我的车坏了"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="20sp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>