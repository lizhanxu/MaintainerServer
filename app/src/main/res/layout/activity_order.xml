<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/order_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appThemeColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_tb"
        android:layout_margin="17dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号              "
                android:textSize="17sp" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="10dp"
            android:text="发布时间"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text3"
            android:layout_below="@id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="车主姓名"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text4"
            android:layout_below="@id/text3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text5"
            android:layout_below="@+id/text4"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text6"
            android:layout_below="@+id/text5"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型号"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text7"
            android:layout_below="@+id/text6"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障码"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text8"
            android:layout_below="@+id/fault_code"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障描述"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/fault_describe"
            android:layout_below="@+id/text8"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="         发动机故障，轰鸣声很大；排气阀堵塞有浓烟；"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/car_brand"
            android:layout_alignStart="@+id/order_id"
            android:layout_alignLeft="@+id/order_id"
            android:layout_alignBaseline="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奥迪"
            android:textSize="17sp" />
            <TextView
                android:id="@+id/order_id"
                android:layout_toRightOf="@+id/text1"
                android:layout_alignBaseline="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188751983678"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_date"
                android:layout_alignStart="@+id/order_id"
                android:layout_alignLeft="@+id/order_id"
                android:layout_alignBaseline="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-8-8  14:34"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/order_id"
                android:layout_alignLeft="@+id/order_id"
                android:layout_alignBaseline="@+id/text3"
                android:text="李四"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/user_tele"
                android:layout_alignStart="@+id/order_id"
                android:layout_alignLeft="@+id/order_id"
                android:layout_alignBaseline="@id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18875198367"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/car_type"
                android:layout_alignBaseline="@+id/text6"
                android:layout_alignStart="@+id/order_id"
                android:layout_alignLeft="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A8"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fault_code"
                android:layout_alignTop="@+id/text7"
                android:layout_alignStart="@+id/order_id"
                android:layout_alignLeft="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12334   5464564  456456"
                android:textSize="17sp" />


    </RelativeLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/ack_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/btn_bg"
        android:onClick="onClick"
        android:text="确认接单"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

</RelativeLayout>