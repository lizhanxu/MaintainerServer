<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/appThemeColor"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/order_time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="2018.1.5"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/order_time"
            android:text="奥迪A8"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/order_distance"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/order_type"
            android:text="8"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/order_distance"
            android:text="km"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="详情:  "
            android:textSize="20dp"
            android:layout_alignLeft="@+id/order_time"
            android:layout_below="@+id/order_time"
            />


        <TextView
            android:id="@+id/order_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_2"
            android:layout_below="@+id/order_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="这辆汽车已经不行了"
            android:textSize="20dp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>